{
  "name": "@piikeep/web-help",
  "version": "0.2.2",
  "description": "A comprehensive, headless help system for React applications. Built with TypeScript for maximum flexibility.",
  "author": {
    "name": "Charles de Jager",
    "email": "charles.de.jager@piikeep.com"
  },
  "organization": "PIIKeep",
  "main": "dist/web-help-library.umd.js",
  "module": "dist/web-help-library.es.js",
  "types": "dist/index.d.ts",
  "bin": {
    "web-help": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/web-help-library.es.js",
      "require": "./dist/web-help-library.umd.js"
    },
    "./baseline.css": "./dist/styles/baseline.css",
    "./devtools": {
      "types": "./dist/devtools/index.d.ts",
      "import": "./dist/web-help-library.es.js",
      "require": "./dist/web-help-library.umd.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pii-keep/web-help.git"
  },
  "keywords": [
    "react",
    "help",
    "documentation",
    "headless",
    "typescript",
    "component-library",
    "contextual-help",
    "markdown",
    "cli"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "release": "npm run build && git tag -a v$(node -p \"require('./package.json').version\") -m \"Release v$(node -p \"require('./package.json').version\")\" && git push --follow-tags"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "html-react-parser": "^5.2.10",
    "marked": "^17.0.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "license": "MIT",
  "sideEffects": false
}
